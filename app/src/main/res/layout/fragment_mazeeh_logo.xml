<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="ir.boojanco.onlinefoodorder.viewmodels.MazeehLogoViewModel" />
    </data>

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/materialGray50"
        tools:context=".ui.fragments.logo.MazeehLogoFragment">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animation_mazeeh_logo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            app:lottie_autoPlay="true"
            app:lottie_loop="false"
            app:lottie_rawRes="@raw/mazeeh_logo_animate"
            app:lottie_renderMode="automatic" />

    </FrameLayout>
</layout>