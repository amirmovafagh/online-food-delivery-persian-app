<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/enter_nav_graph"
    app:startDestination="@id/mazeehLogoFragment">

    <activity
        android:id="@+id/mainActivity"
        android:name="ir.boojanco.onlinefoodorder.ui.activities.MainActivity" />

    <fragment
        android:id="@+id/mazeehLogoFragment"
        android:name="ir.boojanco.onlinefoodorder.ui.fragments.logo.MazeehLogoFragment"
        android:label="مزه"
        tools:layout="@layout/fragment_mazeeh_logo">
        <action
            android:id="@+id/action_mazeehLogoFragment_to_loginRegisterFragment"
            app:destination="@id/loginRegisterFragment"
            app:enterAnim="@anim/fade_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/fade_out"
            app:popUpTo="@+id/enter_nav_graph"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_mazeehLogoFragment_to_mainActivity"
            app:destination="@id/mainActivity"
            app:enterAnim="@anim/fade_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/fade_out"
            app:launchSingleTop="true"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/loginRegisterFragment"
        android:name="ir.boojanco.onlinefoodorder.ui.fragments.loginRegister.LoginRegisterRegisterFragment"
        android:label="LoginRegisterFragment"
        tools:layout="@layout/fragment_login_register">

        <action
            android:id="@+id/action_loginRegisterFragment_to_mainActivity"
            app:destination="@id/mainActivity"
            app:enterAnim="@anim/fade_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/fade_out"
            app:launchSingleTop="true"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_loginRegisterFragment_to_verificationFragment"
            app:destination="@id/verificationFragment"
            app:enterAnim="@anim/fade_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/fade_out" />
        <action
            android:id="@+id/action_loginRegisterFragment_to_forgotPassFragment"
            app:destination="@id/forgotPassFragment"
            app:enterAnim="@anim/fade_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/fade_out" />
    </fragment>
    <fragment
        android:id="@+id/verificationFragment"
        android:name="ir.boojanco.onlinefoodorder.ui.fragments.loginRegister.VerificationFragment"
        android:label="verification_fragment"
        tools:layout="@layout/verification_fragment">
        <argument
            android:name="verificationCodeTimer"
            app:argType="long" />
        <argument
            android:name="phoneNumber"
            app:argType="string" />
        <argument
            android:name="password"
            app:argType="string" />
        <action
            android:id="@+id/action_verificationFragment_to_mainActivity"
            app:destination="@id/mainActivity"
            app:enterAnim="@anim/fade_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/fade_out"
            app:launchSingleTop="true"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/forgotPassFragment"
        android:name="ir.boojanco.onlinefoodorder.ui.fragments.forgotPass.ForgotPassFragment"
        android:label="ForgotPassFragment" >
        <action
            android:id="@+id/action_fragment_forgotPassFragment_to_fragment_loginRegisterFragment"
            app:enterAnim="@anim/fade_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/fade_out"
            app:popUpTo="@+id/loginRegisterFragment"/>
    </fragment>

</navigation>