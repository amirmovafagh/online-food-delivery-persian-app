<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data></data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/cons_layout_main_state_city_dialog"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp"
        android:background="@drawable/wallpaper_restaurant_info"
        android:layoutDirection="rtl"
        >

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_state_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="@dimen/card_view_corner_radius"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/overlapCardBackgroundColor"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerview_state_item"
                    android:layout_width="0dp"
                    android:layout_height="300dp"
                    android:layout_weight="0.6"
                    android:overScrollMode="never"
                    />
                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_city_item"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:visibility="gone"
                    >
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerview_city_item"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:overScrollMode="never"
                        />

                </androidx.cardview.widget.CardView>
            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/card_view_corner_radius"
            app:layout_constraintTop_toTopOf="@id/cv_state_city"
            app:layout_constraintBottom_toTopOf="@id/cv_state_city"
            app:layout_constraintRight_toRightOf="@id/cv_state_city"
            app:layout_constraintLeft_toLeftOf="@id/cv_state_city">
            <EditText
                android:id="@+id/edit_text_search_state_filter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="جستوجو"
                />
        </androidx.cardview.widget.CardView>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>