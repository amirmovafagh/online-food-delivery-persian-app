<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="homeViewModel"
            type="ir.boojanco.onlinefoodorder.viewmodels.HomeViewModel" />
    </data>

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.home.HomeFragment"
    android:layoutDirection="rtl"
    android:background="@color/backgroundGrayLight">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewImageSlider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        bind:layout_constraintEnd_toEndOf="parent"
        bind:layout_constraintStart_toStartOf="parent"
        bind:layout_constraintTop_toTopOf="parent">

        <com.smarteist.autoimageslider.SliderView
            android:id="@+id/imageSlider"
            android:layout_width="match_parent"
            android:layout_height="210dp"
            bind:sliderAnimationDuration="600"
            bind:sliderAutoCycleDirection="back_and_forth"
            bind:sliderAutoCycleEnabled="true"
            bind:sliderCircularHandlerEnabled="false"
            bind:sliderIndicatorAnimationDuration="600"
            bind:sliderIndicatorRtlMode="on"
            bind:sliderIndicatorGravity="center_horizontal|bottom"
            bind:sliderIndicatorMargin="35dp"
            bind:sliderIndicatorOrientation="horizontal"
            bind:sliderIndicatorPadding="3dp"
            bind:sliderIndicatorRadius="0dp"
            bind:sliderIndicatorSelectedColor="@color/colorAccent"
            bind:sliderIndicatorUnselectedColor="#FFF"
            bind:sliderScrollTimeInSec="5"
            bind:sliderStartAutoCycle="true" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_search_layout"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        bind:cardCornerRadius="23dp"
        bind:layout_constraintBottom_toBottomOf="@id/cardViewImageSlider"
        bind:layout_constraintEnd_toEndOf="parent"
        bind:layout_constraintStart_toStartOf="parent"
        bind:layout_constraintTop_toTopOf="@id/cardViewImageSlider"
        bind:layout_constraintVertical_bias="1.14">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:baselineAligned="false"
            android:weightSum="100.0">

            <LinearLayout
                android:layout_width="0.0dp"
                android:layout_height="match_parent"
                android:layout_weight="70.0"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:weightSum="100.0">

                <EditText
                    android:layout_width="0.0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8.0dp"
                    android:layout_weight="90.0"
                    android:ellipsize="end"
                    android:background="@android:color/white"
                    android:drawableStart="@drawable/ic_action_search"
                    android:hint="@string/search_title"
                    android:maxLines="1"
                    android:textSize="@dimen/edit_text_font_size" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_search"
                android:layout_width="0.0dp"
                android:layout_height="match_parent"
                android:layout_weight="30.0"
                android:background="@color/colorPrimary"
                android:gravity="center_vertical">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cons_layout_location"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?android:attr/selectableItemBackground">
                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/lottie_location_animate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:scaleType="centerCrop"
                        app:lottie_rawRes="@raw/location_animate_icon"
                        app:lottie_loop="true"
                        app:lottie_autoPlay="true"
                        app:layout_constraintRight_toRightOf="@id/cons_layout_location"
                        app:layout_constraintTop_toTopOf="@id/cons_layout_location"
                        app:layout_constraintBottom_toBottomOf="@id/cons_layout_location"
                        app:layout_constraintLeft_toRightOf="@id/lin_location"
                        app:layout_constraintHorizontal_weight="2.5"
                        />

                    <LinearLayout
                        android:id="@+id/lin_location"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintBottom_toBottomOf="@id/cons_layout_location"
                        app:layout_constraintLeft_toLeftOf="@id/cons_layout_location"
                        app:layout_constraintTop_toTopOf="@id/cons_layout_location"
                        app:layout_constraintRight_toLeftOf="@+id/lottie_location_animate"
                        app:layout_constraintHorizontal_weight="7.5">
                        <TextView
                            android:id="@+id/street"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="مجدالعلما"
                            android:ellipsize="end"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/caption_font_size" />

                        <TextView
                            android:id="@+id/city"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:text="یزد"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/button_font_size"
                            />
                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>



            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!--<TextView
        android:id="@+id/textViewCategoryTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:maxLines="1"
        android:textColor="@android:color/black"
        android:textAlignment="textStart"
        android:textSize="@dimen/body1_paragraph_font_size"
        android:text="@string/popular_categories"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cv_search_layout"/>-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        bind:layout_constraintEnd_toEndOf="parent"
        bind:layout_constraintStart_toStartOf="parent"
        bind:layout_constraintTop_toBottomOf="@+id/cv_search_layout">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview_food_type_search_filter_home"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="0.6"
            />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cv_sugest"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingBottom="?actionBarSize"
            android:layout_weight="0.4"
            >
            <androidx.cardview.widget.CardView
                android:id="@+id/cv_new_restaurants"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="16dp"
                app:cardCornerRadius="25dp"
                app:layout_constraintHorizontal_weight="5"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toLeftOf="@id/cv_popular_foods"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/new_restaurants_image"
                    android:scaleType="centerCrop"/>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/new_rstaurant_cardview_gradient"
                    />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/textview_shape_white_rounded"
                        android:padding="5dp"
                        android:elevation="1dp"
                        android:textColor="@color/colorPrimary"
                        android:textAlignment="center"
                        android:textSize="@dimen/body4_paragraph_font_size"
                        android:text="@string/new_restaurants"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintHorizontal_bias="0"
                        app:layout_constraintVertical_bias="0.15"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/cv_popular_foods"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="16dp"
                app:cardCornerRadius="25dp"
                app:layout_constraintHorizontal_weight="5"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/cv_new_restaurants"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/delicious_image"
                    android:scaleType="centerCrop"/>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/popuular_food_cardview_gradient"
                    />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/textview_shape_white_rounded"
                        android:padding="5dp"
                        android:elevation="1dp"
                        android:textColor="@color/colorPrimary"
                        android:textAlignment="center"
                        android:textSize="@dimen/body4_paragraph_font_size"
                        android:text="@string/delicious"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintHorizontal_bias="0"
                        app:layout_constraintVertical_bias="0.15"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
</layout>