<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="homeViewModel"
            type="ir.boojanco.onlinefoodorder.viewmodels.HomeViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/wallpaper_restaurant_info"
        android:layoutDirection="rtl"
        tools:context=".ui.fragments.home.HomeFragment">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/backgroundGrayLight_lowAlpha" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewImageSlider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            bind:layout_constraintEnd_toEndOf="parent"
            bind:layout_constraintStart_toStartOf="parent"
            bind:layout_constraintTop_toTopOf="parent">

            <com.smarteist.autoimageslider.SliderView
                android:id="@+id/imageSlider"
                android:layout_width="match_parent"
                android:layout_height="210dp"
                bind:sliderAnimationDuration="600"
                bind:sliderAutoCycleDirection="back_and_forth"
                bind:sliderAutoCycleEnabled="true"
                bind:sliderCircularHandlerEnabled="false"
                bind:sliderIndicatorAnimationDuration="600"
                bind:sliderIndicatorGravity="center_horizontal|bottom"
                bind:sliderIndicatorMargin="35dp"
                bind:sliderIndicatorOrientation="horizontal"
                bind:sliderIndicatorPadding="3dp"
                bind:sliderIndicatorRadius="0dp"
                bind:sliderIndicatorRtlMode="on"
                bind:sliderIndicatorSelectedColor="@color/colorAccent"
                bind:sliderIndicatorUnselectedColor="#FFF"
                bind:sliderScrollTimeInSec="5"
                bind:sliderStartAutoCycle="true" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_search_layout"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            bind:cardCornerRadius="23dp"
            bind:layout_constraintBottom_toBottomOf="@id/cardViewImageSlider"
            bind:layout_constraintEnd_toEndOf="@id/cardViewImageSlider"
            bind:layout_constraintStart_toStartOf="@id/cardViewImageSlider"
            bind:layout_constraintTop_toBottomOf="@id/cardViewImageSlider">

            <!--search and location layout-->
            <LinearLayout
                android:id="@+id/search_location_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <androidx.appcompat.widget.SearchView
                    android:id="@+id/search"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.7"
                    android:ellipsize="end"
                    android:layoutDirection="rtl"
                    android:maxLines="1"
                    style="@style/MySearchViewStyle"
                    android:nextFocusLeft="@id/search"
                    android:nextFocusUp="@id/search"
                    android:textDirection="rtl"
                    android:textSize="@dimen/edit_text_font_size"
                    app:defaultQueryHint="@string/search_title"
                    tools:ignore="NestedWeights" />


                <LinearLayout
                    android:id="@+id/layout_search"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:background="@color/colorPrimary">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/cons_layout_location"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:onClick="@{()-> homeViewModel.selectCityOnClick()}">

                        <com.airbnb.lottie.LottieAnimationView
                            android:id="@+id/lottie_location_animate"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:scaleType="centerCrop"
                            app:layout_constraintBottom_toBottomOf="@id/cons_layout_location"
                            app:layout_constraintHorizontal_weight="2.5"
                            app:layout_constraintLeft_toRightOf="@id/lin_location"
                            app:layout_constraintRight_toRightOf="@id/cons_layout_location"
                            app:layout_constraintTop_toTopOf="@id/cons_layout_location"
                            app:lottie_autoPlay="true"
                            app:lottie_loop="true"
                            app:lottie_rawRes="@raw/location_animate_icon" />

                        <LinearLayout
                            android:id="@+id/lin_location"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_constraintBottom_toBottomOf="@id/cons_layout_location"
                            app:layout_constraintHorizontal_weight="7.5"
                            app:layout_constraintLeft_toLeftOf="@id/cons_layout_location"
                            app:layout_constraintRight_toLeftOf="@+id/lottie_location_animate"
                            app:layout_constraintTop_toTopOf="@id/cons_layout_location">

                            <TextView
                                android:id="@+id/street"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:text="@{homeViewModel.stateLiveData}"
                                android:textColor="@android:color/white"
                                android:textSize="@dimen/body4_paragraph_font_size" />

                            <TextView
                                android:id="@+id/city"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:text="@{homeViewModel.cityLiveData}"
                                android:textColor="@android:color/white"
                                android:textSize="@dimen/body3_paragraph_font_size" />
                        </LinearLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>


                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!--<TextView
            android:id="@+id/textViewCategoryTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:maxLines="1"
            android:textColor="@android:color/black"
            android:textAlignment="textStart"
            android:textSize="@dimen/body1_paragraph_font_size"
            android:text="@string/popular_categories"
            app:layout_constraintVertical_bias="0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cv_search_layout"/>-->


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview_food_type_search_filter_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:orientation="horizontal"
            android:overScrollMode="never"
            app:layout_constraintLeft_toLeftOf="@id/cardViewImageSlider"
            app:layout_constraintRight_toRightOf="@id/cardViewImageSlider"
            app:layout_constraintTop_toBottomOf="@id/cardViewImageSlider"

            />

        <!--<ImageView
            android:id="@+id/img_half_pizza"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/table_half_right"
            app:layout_constraintBottom_toTopOf="@id/cv_sugest"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/recyclerview_food_type_search_filter_home"
            app:layout_constraintVertical_bias="0.0"

            />

        <ImageView
            android:id="@+id/img_half_burger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/table_half_left"
            app:layout_constraintBottom_toBottomOf="@id/img_half_pizza"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@id/img_half_pizza" />-->
        <ImageView
            android:id="@+id/img_half_burger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/table_half_left"
            app:layout_constraintBottom_toTopOf="@id/cv_sugest"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/recyclerview_food_type_search_filter_home"
            app:layout_constraintVertical_bias="0" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cv_sugest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_new_restaurants"
                android:layout_width="0dp"
                android:layout_height="85dp"
                android:layout_margin="16dp"
                app:cardCornerRadius="25dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_weight="5"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/cv_popular_foods"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/new_restaurants_image" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/new_rstaurant_cardview_gradient" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/textview_shape_white_rounded"
                        android:elevation="1dp"
                        android:padding="5dp"
                        android:text="@string/new_restaurants"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/body4_paragraph_font_size"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.2" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_popular_foods"
                android:layout_width="0dp"
                android:layout_height="85dp"
                android:layout_margin="16dp"
                app:cardCornerRadius="25dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_weight="5"
                app:layout_constraintLeft_toRightOf="@+id/cv_new_restaurants"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/delicious_image" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/popuular_food_cardview_gradient" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/textview_shape_white_rounded"
                        android:elevation="1dp"
                        android:padding="5dp"
                        android:text="@string/delicious"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/body4_paragraph_font_size"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.2" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_waiting_response"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"
            app:cardBackgroundColor="@color/materialGray100"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/animation_view"
                android:layout_width="150dp"
                android:layout_height="250dp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/waiting_animate_burger" />
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>